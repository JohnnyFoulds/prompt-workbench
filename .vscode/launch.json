    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/main.py",
            "console": "integratedTerminal",
            "args": [
                "--reload"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "jinja": true
        },
        {
            "name": "Python: Gradio Interface",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/dev_run.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "jinja": true
        }
    ]
}